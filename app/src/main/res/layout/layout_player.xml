<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/player_tv_current_time"
        android:textSize="14sp"
        android:text="00:00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/remote_time_seekbar"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="120dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/remote_time_end"
        android:textSize="14sp"
        android:text="00:00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageButton
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/ic_arrow_back"
        android:id="@+id/remote_back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp" />

    <ImageButton
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/ic_play_arrow"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/remote_start" />

    <ImageButton
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/ic_arrow_forward"
        android:id="@+id/remote_next"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp" />

</LinearLayout>

<LinearLayout
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/ic_volume"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/remote_volume_seekbar"
        android:layout_width="200dp"
        android:layout_height="40dp" />

    <ImageView
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/ic_volume"
        android:layout_width="40dp"
        android:layout_height="40dp" />

</LinearLayout>

</LinearLayout>